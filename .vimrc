imap <c-j> <Esc>
noremap <C-j> <esc>
noremap! <C-j> <esc>
syntax on
set number
set tabstop=4
set expandtab
set list
set smartindent
set background=dark
set showmatch
set ruler
set showcmd
set mouse=a
set wildmenu
set foldmethod=marker
noremap <CR> o<ESC>

:set encoding=utf-8
:set fileencodings=iso-2022-jp,euc-jp,sjis,utf-8
:set fileformats=unix,dos,mac
