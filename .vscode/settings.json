{
  "git.confirmSync": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "breadcrumbs.enabled": true,
  "workbench.editor.showTabs": "single",
  "editor.minimap.enabled": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lineNumbers": "off",
  "editor.formatOnSave": false,
  "editor.folding": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.copyWithSyntaxHighlighting": false, // 書式設定なしでコピー
  "editor.glyphMargin": false, // hide breakpoints
  "editor.renderWhitespace": "all",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "dev.containers.defaultExtensions": [
    "eamodio.gitlens",
    "formulahendry.code-runner"
  ],
  "editor.suggestSelection": "first",
  "python.languageServer": "Pylance",
  "editor.accessibilitySupport": "off",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "window.zoomLevel": 3,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.factorypath": true
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.rmd": "markdown",
    "*.md": "markdown",
    "*.yaml": "helm",
    "*.tpl": "gotmpl"
  },
  "editor.guides.highlightActiveIndentation": true,
  "security.workspace.trust.untrustedFiles": "open",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.activityBar.location": "hidden",
  "git.openRepositoryInParentFolders": "never",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "debug.openDebug": "neverOpen",
  "redhat.telemetry.enabled": true,
  "testing.automaticallyOpenPeekView": "never",
  "jest.debugMode": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "go.toolsManagement.autoUpdate": true,
  "editor.tabSize": 2,
  "cmake.showOptionsMovedNotification": false,
  "makefile.configureOnOpen": false,
  "[gotmpl]": {
    "editor.defaultFormatter": "golang.go"
  },
  "vs-kubernetes": {
    "vs-kubernetes.minikube-show-information-expiration": "2025-06-15T08:39:12.542Z",
    "vs-kubernetes.ignore-recommendations": true
  },
  "[purescript]": {
    "editor.defaultFormatter": "mvakula.vscode-purty"
  },
  "testing.automaticallyOpenTestResults": "neverOpen"
}
