[ui]
#style = compact
ignore = ~/.hgignore
merge = internal:merge 
#merge = vimdiff

[defaults]
cdiff = -q
 
[alias]
rl = resolve -l
ca = ci --amend
prev = diff -c -1
b = branches
bb = branch
s = status .
so = st --rev "max(branch('$1')):."

# merge
mergel = merge --tool internal:local
mergeo = merge --tool internal:other
mergep = merge --tool internal:prompt
merged = merge --tool internal:dump

# log
latest = glog --limit 5
l = log -b . --limit 5
lb = log --color always -b .

# diff
d = diff --color always .
db = diff --color always -r "min(branch(.)):."
dt = diff --color always -r ".:max(branch(.))"
do = diff --color always -r "max(branch('$1')):."
branchdiff = diff -r "max(ancestors('$1') and branch(default)):'$1'"
di = diff
qd = qdiff --color always
vim = vimdiff
bm = bookmarks

# mq
qq = qqueue
q = qseries -s
sq = qseries -s
qstatus = status --rev qparent:qtip
qs = qstatus
qa = qfinish -a

# qrefresh
qr = qrefresh -s
qe = qrefresh -se

# qnew
n = qnew
nt = qnew 

# guard
g = qguard -l
gg = qguard
gn = qguard -n

# select
sl = qselect
ss = qselect -sv
sn = qselect -n

# qpush/qpop
o = qpop
oa = qpop -a
u = qpush
ua = qpush -a
um = qpush --move

# with --mq option
ms = st --mq 
mci = ci --mq
md = diff --mq
ml = log -b . --limit 5
mpush = push --mq

[web]
#cacerts = /etc/ssl/certs/ca-certificates.crt

[pager]
pager = LESS='-R' less
quiet = True
attend = help, diff, log, glog, qdiff, lb, qd, prev, db, dt, do, md

[extensions]
pager =
rebase =
purge = 
record = 
hgext.color =
hgext.extdiff =
hgext.convert =
color =
graphlog =
mq =
#mercurial_keyring = 
#phase =
#hggit = /usr/local/lib/python2.7/dist-packages/hggit

#[phases]
#publish = False

[mq]
secret = True

[color]
status.modified = green bold underline
status.added = magenta bold underline
status.removed = red bold blue_background
status.deleted = red underline
status.unknown = blue bold
status.ignored = black bold white_background
 
branches.closed = black bold white_background
branches.current = green
 
qseries.applied = blue bold underline
qseries.unapplied = black bold white_background
qseries.missing = red bold

[extdiff]
cmd.vimdiff =

%include ~/lib/hgrc
