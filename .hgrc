[ui]
#style = compact
ignore = ~/.hgignore
merge = internal:merge 
#merge = vimdiff

[defaults]
cdiff = -q
 
[alias]
rl = resolve -l
sl = qselect
sls = qselect -s
#mergein = merge --tool internal:merge
prev = diff -c -1
latest = glog --limit 5
l = log -b . --limit 5
b = branches
bb = branch
s = status .

# diff
d = diff .
db = diff -r "min(branch(.)):."
dt = diff -r ".:max(branch(.))"
do = diff -r "max(branch('$1')):."
branchdiff = diff -r "max(ancestors('$1') and branch(default)):'$1'"
di = diff
qd = qdiff
vi  = vimdiff
vim = vimdiff
bm = bookmarks
lb = log -b .

# mq
qq = qqueue
q = qseries -s
sq = qseries -s
qstatus = status --rev qparent:qtip
qs = qstatus

# qpush/qpop
o = qpop
oa = qpop -a
u = qpush
ua = qpush -a
um = qpush --move

# with --mq option
ms = st --mq 
mci = ci --mq
md = diff --mq
ml = log -b . --limit 5
mpush = push --mq

[web]
cacerts = /etc/ssl/certs/ca-certificates.crt

[pager]
pager = LESS='-R' less
quiet = True
attend = help, diff, log, glog, qdiff, lb, qd, prev, db, dt, do, md

[extensions]
pager =
rebase =
purge = 
record = 
hgext.color =
hgext.extdiff =
hgext.convert =
color =
graphlog =
mq =
hggit = /usr/local/lib/python2.7/dist-packages/hggit

[extdiff]
#cmd.vimdiff = vimdiff
#opts.cdiff =

 
[color]
status.modified = green bold underline
status.added = magenta bold underline
status.removed = red bold blue_background
status.deleted = red underline
status.unknown = blue bold
status.ignored = black bold white_background
 
branches.closed = black bold white_background
branches.current = green
 
qseries.applied = blue bold underline
qseries.unapplied = black bold white_background
qseries.missing = red bold

[extdiff]
cmd.vimdiff =

%include ~/lib/hgrc
