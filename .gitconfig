[user]
	name = her0e1c1
	email = her0e1c1@gmail.com
[alias]
	rt = remote
	au = add -u

	# fetch
	f = fetch
	fm = fetch origin master

	# commit
	ci = commit
	ca = commit --amend
	civ = commit -v
	cia = commit -va
	ciam = commit -am

	# status
	s = status -uno
	st = status

    # checkout
    com = checkout master
	co = checkout
	cob = checkout -b

    # diff
    d = diff
    dm = diff master..
    domh = diff origin/master..HEAD
    dhom = diff HEAD..origin/master
    df = diff ..FETCH_HEAD
    dc = "diff --cached"
    dw = diff --word-diff
    dcw = "diff --cached" --word-diff

    # log
	l = log -n 5
	lm = log master
	lp = log -p
    ld = 'log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short'

    # graph log    
	gl = log --graph
    gg =  log --graph --name-status --pretty=format:"%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset"
    gf = log --graph --oneline --decorate=full  

    # branch
	b = branch -avv
	br = branch
    bm = branch --merged
    bn = branch --no-merged

    # reset
	r = reset
    rsm = reset --merge
    ro = reset ORIG_HEAD --hard

	# merge
	mf = merge FETCH_HEAD

    # stash
    sh = stash
    shl = stash list
    sha = stash apply

[color]
	ui = true

[core]
	editor = vim
	excludesfile = ~/.gitignore

[push]
    default = matching
