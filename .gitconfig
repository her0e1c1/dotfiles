[alias]
    rt = remote

    # rebase
    rb   = rebase
    rbi  = rebase -i --autosquash
    rbm  = rebase -i --autosquash master
    rba  = rebase --abort
    rbc  = rebase --continue
    rbs  = rebase --skip
    rbt  = rebase -Xtheirs master

    # add
    a  = add .
    au = add -u
    ap = add -p

    # fetch
    f = fetch
    fm = fetch origin master

    # commit
    ci = commit -v
    cad = commit -v --amend
    ca = commit -va
    ciam = commit -am

    # status
    s = status -uno
    st = status .

    # checkout
    com = checkout master
    co = checkout
    cob = checkout -b

    # cherry pick
    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue
    cpt = cherry-pick --strategy=recursive -X theirs

    # diff
    c = "diff --cached"
    d = diff .
    df = "diff --cached"
    dfm = diff master..
    dfp = diff upstream/production..
    dfomh = diff origin/master..HEAD
    dfhom = diff HEAD..origin/master
    dff = diff ..FETCH_HEAD
    dfc = "diff --cached"
    dfw = diff --word-diff
    dfcw = "diff --cached" --word-diff

    # log
    l = log -n 5
    lp = log -p
    lg = log -g
    l1 = log --oneline
    lm = log master..
    lmp = log master.. -p
    ld = 'log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short'
    today = log --since=midnight --author='$(git config user.name)' --oneline
    author = log --pretty=format:'%an(%ae): %ad: %s'

    # graph log
    g = log --graph
    gl = log --graph
    gf = log --graph --oneline --decorate=full
    gb = log --graph --branches --pretty=format:"%d [%h] \"%s\""
    gg = log --graph --name-status --pretty=format:"%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset"

    # branch
    b = branch -avv
    br = branch
    brm = branch --merged
    brn = branch --no-merged

    # reset
    rs = reset
    rso = reset ORIG_HEAD --hard
    rs0 = reset HEAD --hard
    rs1 = reset HEAD^ --hard
    rsh = reset --hard
    rss = reset --soft
    rsm = reset --merge

    # merge
    mf = merge FETCH_HEAD
    ma = merge --abort
    merge-ours = merge -Xours
    merge-their = merge -Xtheir

    # stash
    sa  = stash
    sav = stash save --include-untracked
    sal = stash list
    sap = stash pop
    saa = stash apply
    sas = stash show -p

    # push
    p = push origin
    push = push origin
    pushup = push upstream

    # revert
    revertc = revert --continue  

    ls = ls-files
[color]
    ui = true

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    #️ git stなど、日本語の文字化け対応
    quotepath = false

[push]
    default = current
