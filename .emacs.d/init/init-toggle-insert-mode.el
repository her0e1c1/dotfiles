(let
 ((words `(
  ;(,[?¥].  ,[?\\])
  ("０". "0")
  ("１". "1")
  ("２". "2")
  ("３". "3")
  ("４". "4")
  ("５". "5")
  ("６". "6")
  ("７". "7")
  ("８". "8")
  ("９". "9")
  ;("ー". "-")
  ("；". ";")
  ("｀". "`")
  ("：".  ":")
  ("）". ")")
  ("（". "(")
  ("。". ".")
  ("＊". "*")
  ("＜". "<")
  ("＠", "@")
  ("＞". ">")
  ("、". ",")
  ("＃". "#")
  ("　". " "))))
 (progn
  (defun set-key (input output)
   (global-set-key input
    `(lambda () (interactive)
     (insert ,output))))
  (dolist (w words) (set-key (car w) (cdr w)))))
